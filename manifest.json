{
  "manifest_version": 3,
  "name": "CRXJS React Vite Example",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "permissions": ["tabs"],
  "content_scripts": [
    {
      "js": ["src/content.tsx"],
      "matches": ["https://www.crunchyroll.com/*"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "src/service_worker.ts"
  },
  "host_permissions": ["https://disqus.com/*"]
}
